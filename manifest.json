{
  "manifest_version": 2,
  "name": "ExplainToMe",
  "author": "Sang Han",
  "version": "0.2",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "152": "icons/icon128.png"
  },
  "description": "Automatic Web Summarizer",
  "homepage_url": "https://explaintome.herokuapp.com",
  "permissions": [
    "activeTab",
    "tabs",
    "notifications"
  ],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Summarize this page"
  }
}
